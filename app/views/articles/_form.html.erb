<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <%= render 'layouts/errors_message' %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10 %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
